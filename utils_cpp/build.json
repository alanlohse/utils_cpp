{
    name: 'utils_cpp',
    description: 'A simple hello world executable',
    author: 'Alan N. Lohse',
    source: 'https://github.com/alanlohse/utils_cpp',
    version: '0.1.0',
    type: 'static library',
    dependencies: [],
    includeDirs: ['./include'],
    sources: ['./src/*.cpp'],
    testSources: ['test_src/*.cpp'],
    targets: [{
            name: 'Debug',
            arch: 'x64',
            platform: 'win32',
            toolchain: 'gcc',
            includeDirs: [],
