            defines: {
                'DEBUG': ''
            },
            libraryPaths: [],
            libraries: ['ws2_32'],
            linkoptions: {}
        },
        {
            name: 'Release',
            arch: 'x64',
            platform: 'win32',
            toolchain: 'msvc14',
            includeDirs: [],
            sources: ['./windows/*.cpp'],
            options: { optimization: 3, debug: 0, warnings: 'all', other: '' },
            defines: {},
            libraryPaths: [],
            libraries: ['ws2_32'],
            linkoptions: { debugInformation: false }
        }
    ],
    package: {
        name: 'utils_cpp',
        includes: ['./include'],
        other: []
    }
